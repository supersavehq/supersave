{
	"name": "supersave",
	"version": "0.17.0",
	"description": "A package to create a simple datastore with a generic API for side projects.",
	"main": "build/index.js",
	"packageManager": "pnpm@10.10.0",
	"scripts": {
		"watch": "tsc -w",
		"build": "tsc",
		"lint": "concurrently --kill-others-on-fail \"npm:lint:*\"",
		"lint:prettier": "prettier --check --loglevel=warn src",
		"lint:tsc": "tsc --noEmit",
		"format": "prettier --write src",
		"test": "jest",
		"test:mysql": "cross-env CONN=mysql://supersave:savesuper@127.0.0.1:3306/supersave jest --runInBand --forceExit",
		"test:watch": "cross-env DEBUG=supersave:* jest --watch",
		"test:watch:mysql": "cross-env DEBUG=supersave:* CONN=mysql://supersave:savesuper@127.0.0.1:3306/supersave jest --runInBand --forceExit --watch",
		"clean": "rimraf build",
		"start": "nodemon tests/run.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/supersavehq/supersave.git"
	},
	"types": "./build/index.d.ts",
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint",
			"pre-push": "npm test"
		}
	},
	"engines": {
		"node": ">=18"
	},
	"keywords": [
		"sqlite",
		"database",
		"store",
		"api",
		"headless",
		"mysql",
		"supersave",
		"super"
	],
	"author": "debuggingdan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/supersavehq/supersave/issues"
	},
	"homepage": "https://github.com/supersavehq/supersave#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@tsconfig/node14": "^1.0.3",
		"@types/debug": "^4.1.12",
		"@types/express": "^4.17.23",
		"@types/jest": "^27.5.2",
		"@types/node": "^14.18.63",
		"@types/pluralize": "0.0.29",
		"@types/slug": "^0.9.1",
		"@types/supertest": "^2.0.16",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"express": "^4.21.2",
		"husky": "^4.3.8",
		"jest": "^29.7.0",
		"mysql2": "^3.14.2",
		"nodemon": "^3.1.10",
		"prettier": "^2.8.8",
		"rimraf": "^3.0.2",
		"sqlite": "^4.2.1",
		"sqlite3": "^5.1.7",
		"superagent": "^7.1.6",
		"supertest": "^6.3.4",
		"ts-jest": "^29.4.0",
		"ts-node": "^9.1.1",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"express": "^4.17.0 || ^5.0.0",
		"mysql2": "^3.11.0",
		"sqlite": "^4.0 || ^5.0",
		"sqlite3": "^5.0"
	},
	"peerDependenciesMeta": {
		"express": {
			"optional": true
		},
		"mysql2": {
			"optional": true
		},
		"sqlite": {
			"optional": true
		},
		"sqlite3": {
			"optional": true
		}
	},
	"dependencies": {
		"debug": "^4.4.1",
		"pluralize": "^8.0.0",
		"short-uuid": "^4.2.2",
		"slug": "^4.1.0"
	}
}
